<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbarTransparent"
    xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/img_circulo_tamanio"
        android:layout_height="@dimen/img_circulo_tamanio"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_width="@dimen/img_circulo_borde"
        app:civ_border_color="@color/colorCircle"
        android:layout_marginStart="@dimen/contenedor_relleno"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/contenedor_margen"
        android:layout_toEndOf="@+id/profile_image"
        tools:text="CumpleaÃ±os"
        tools:ignore="RelativeOverlap"
        android:id="@+id/textView"/>

    <ImageButton
        android:id="@+id/ib_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/contenedor_margen"
        android:contentDescription="@string/accion_editar"
        android:src="@drawable/ic_edit_24dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ib_delete"/>

    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/accion_eliminar"
        android:src="@drawable/ic_delete_24dp"
        android:layout_alignTop="@+id/ib_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/contenedor_margen"/>
</RelativeLayout>