<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.a01luisrene.multirecordatorio.fragments.DetalleRecordatorioFragment">

    <include layout="@layout/toolbar_detail"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingLeft="@dimen/contenedor_relleno"
        android:paddingRight="@dimen/contenedor_relleno"
        android:paddingTop="@dimen/contenedor_relleno">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lb_title"
                style="@style/textFontMainTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_small"
                android:text="@string/titulo_recordatorio"/>

            <TextView
                android:id="@+id/tv_title"
                style="@style/textFontDetailTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_large"
                tools:text="Cita para entrevista personal"/>

            <TextView
                android:id="@+id/lb_entity"
                style="@style/textFontMainTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_small"
                android:text="@string/endidad_otros_recordatorio"/>

            <TextView
                android:id="@+id/tv_entity"
                style="@style/textFontDetailTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_large"
                tools:text="INPE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_large"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lb_type_reminder"
                        style="@style/textFontMainTableta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margen_boton_small"
                        android:text="@string/tipo_recordatorio"/>

                    <Spinner
                        android:id="@+id/sp_type_reminder"
                        style="@style/textFontDetailTableta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lb_phone"
                        style="@style/textFontMainTableta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margen_boton_small"
                        android:text="@string/teleforno_recordatorio"/>

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/textFontDetailTableta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="954336108"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_message"
                style="@style/textFontMainTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_small"
                android:text="@string/mensaje_recordatorio"/>

            <EditText
                android:id="@+id/mt_message"
                style="@style/textFontDetailTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_large"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:ignore="LabelFor"
                tools:text="Contenedor del mensaje."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_large"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lb_post_message_in"
                    style="@style/textFontMainTableta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margen_boton_small"
                    android:text="@string/enviar_mensaje_en_recordatorio"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox"
                        style="@style/textFontDetailTableta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facebook_recordatorio"/>

                    <CheckBox
                        android:id="@+id/checkBox2"
                        style="@style/textFontDetailTableta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter_recordatorio"/>

                    <CheckBox
                        android:id="@+id/checkBox3"
                        style="@style/textFontDetailTableta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enviar_mensaje_recordatorio"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/lb_date_reminder"
                style="@style/textFontMainTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margen_boton_small"
                android:text="@string/fecha_recordatorio"/>

            <TextView
                android:id="@+id/tv_date"
                style="@style/textFontDetailTableta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="30-06-2017"/>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
