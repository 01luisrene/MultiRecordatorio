<resources>
    <!-- Tema de la aplicación base. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza tu tema aquí. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/color_fondo</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentSystemBars" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--Estilos para el formulario detalle - tablet-->
    <style name="textFontMainTableta">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textFontDetailTableta">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Estilos para el formulario detalle - phone-->
    <style name="textFontMainPhone">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textFontDetailPhone">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Estilos para los items de la lista - Tableta-->
    <style name="textFontTitleListTableta">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textFontEntidadListTableta">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="textFontMessageListTableta">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
