<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/contenedor_margen"
    android:paddingRight="@dimen/contenedor_margen"
    android:orientation="vertical"
    tools:context="com.a01luisrene.multirecordatorio.fragments.ListaRecordatoriosFragmento">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_lista_recordatorio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/lista_vacia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/lista_vacia"
        android:text="@string/lista_vacia"
        android:visibility="gone"
        style="@style/lista_vacia"/>

</LinearLayout>
