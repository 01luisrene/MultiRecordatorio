<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.a01luisrene.multirecordatorio.DetalleRecordatorioFragment">

    <include android:id="@+id/toolbar_detail"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/container_margin"
        android:layout_marginLeft="@dimen/container_margin"
        android:layout_marginRight="@dimen/container_margin">
        <TextView
            android:id="@+id/lb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Cita para entrevista personal"
            android:layout_marginBottom="@dimen/margin_bottom_large"
            style="@style/textFontDetailPhone"/>

        <TextView
            android:id="@+id/lb_entity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/entity_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"/>

        <TextView
            android:id="@+id/tv_entity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="INPE"
            android:layout_marginBottom="@dimen/margin_bottom_large"
            style="@style/textFontDetailPhone"/>

        <TextView
            android:id="@+id/lb_type_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"/>

        <Spinner
            android:id="@+id/sp_type_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_large"
            style="@style/textFontDetailPhone"
            />

        <TextView
            android:id="@+id/lb_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="954336108"
            android:layout_marginBottom="@dimen/margin_bottom_large"
            style="@style/textFontDetailPhone"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"/>

        <EditText
            android:id="@+id/mt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:ignore="LabelFor"
            tools:text="Contenedor del mensaje."
            android:layout_marginBottom="@dimen/margin_bottom_large"
            style="@style/textFontDetailPhone"/>

        <TextView
            android:id="@+id/lb_post_message_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/post_message_in_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/facebook_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontDetailPhone"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/twitter_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontDetailPhone"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_send_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontDetailPhone"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_reminder"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            style="@style/textFontMainPhone"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            tools:ignore="LabelFor"
            tools:text="30-06-2017"
            style="@style/textFontDetailPhone"/>
    </LinearLayout>
</LinearLayout>
