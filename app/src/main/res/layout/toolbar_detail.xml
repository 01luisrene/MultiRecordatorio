<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/img_circulo_tamanio"
        android:layout_height="@dimen/img_circulo_tamanio"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_width="@dimen/img_circulo_borde"
        app:civ_border_color="@color/color_borde_imagen_circular"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        tools:text="CumpleaÃ±os"
        tools:ignore="RelativeOverlap"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/ib_edit"
        android:layout_toEndOf="@+id/profile_image"/>

    <ImageButton
        android:id="@+id/ib_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparente"
        android:contentDescription="@string/accion_editar"
        android:src="@drawable/ic_edit_24dp"
        tools:ignore="UnusedAttribute"
        android:layout_marginEnd="8dp"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_toStartOf="@+id/ib_delete"/>

    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ib_edit"
        android:layout_marginEnd="@dimen/contenedor_margen"
        android:backgroundTint="@color/transparente"
        android:contentDescription="@string/accion_eliminar"
        android:src="@drawable/ic_delete_24dp"
        tools:ignore="UnusedAttribute"/>

</RelativeLayout>