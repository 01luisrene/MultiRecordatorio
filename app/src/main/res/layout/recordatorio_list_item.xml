<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contenedor_civ_imagen"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/civ_categoria_recordatorio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/descripcion_imagen_lista_item"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingTop="6dp"
            android:layout_marginEnd="6dp"
            android:paddingBottom="6dp"
            android:layout_toEndOf="@+id/contenedor_civ_imagen"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_title_reminder"
                style="@style/lista_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cumpleaños de mi padre"/>

            <TextView
                android:id="@+id/tv_name_reminder"
                style="@style/lista_subtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Adalino Mas Trigoso"/>

            <TextView
                android:id="@+id/tv_message_reminder"
                style="@style/lista_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Este es un día muy especial para ti padre y te deseo lo mejor en este día y los que vendrán."/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
